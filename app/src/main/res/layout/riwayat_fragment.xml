<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="@color/backgroundAbu">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="12dp"
    android:padding="8dp">
    <TextView
        android:id="@+id/nama_panti_riwayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="#1CA4C9"
        android:text="Panti Asuhan Anak Nugraha"/>
    <TextView
        android:id="@+id/jumlah_donasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#000000"
        android:text="Rp 100.000"
        android:gravity="right"/>
</LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/background"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:padding="8dp">
    <TextView
        android:id="@+id/tipe_atm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12sp"
        android:text="BANK BCA - 372 178 5056"/>
    <TextView
        android:id="@+id/nama_penerima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="A/N Indah Permata"
        android:textSize="12sp"
        android:gravity="right"/>
</LinearLayout>
<Button
    android:id="@+id/btn_bukti_bayar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Upload Bukti Bayar"
    android:textAllCaps="false"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"/>
</LinearLayout>