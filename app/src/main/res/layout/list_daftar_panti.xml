<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DaftarPantiActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/logo_panti"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_wakaf"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/nama_panti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panti Asuhan Anak Nugraha"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="16dp"/>
            <TextView
                android:id="@+id/alamat_panti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. padasuka No.88, Pasirlayung"
                android:textSize="14sp"
                android:paddingLeft="16dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
